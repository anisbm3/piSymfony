{% extends 'home/back.html.twig' %}

{% block title %}Utilisateurs index{% endblock %}


{% block body %}
    <br><br><br><br>
    <div class="main-content">
        <h1>Utilisateurs index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Roles</th>
                    <th>Cin</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Age</th>
                    <th>NumTel</th>
                    <th>Email</th>
                    <th>IsVerified</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ utilisateur.pseudo }}</td>
                    <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
                    <td>{{ utilisateur.cin }}</td>
                    <td>{{ utilisateur.nom }}</td>
                    <td>{{ utilisateur.prenom }}</td>
                    <td>{{ utilisateur.age }}</td>
                    <td>{{ utilisateur.numTel }}</td>
                    <td>{{ utilisateur.email }}</td>
                    <td>{{ utilisateur.isVerified ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_utilisateurs_show', {'id': utilisateur.id}) }}">show</a>
                        <a href="{{ path('app_utilisateurs_edit', {'id': utilisateur.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_utilisateurs_new') }}">Create new</a>
    </div>
{% endblock %}
