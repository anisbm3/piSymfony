{% extends 'front.html.twig' %}

{% block title %}Debate index{% endblock %}

{% block body %}
    <h1>Debate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Description</th>
                <th>NomAnime</th>
                <th>NoteAnime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for debat in debats %}
            <tr>
                <td>{{ debat.id }}</td>
                <td>{{ debat.SujetDebat }}</td>
                <td>{{ debat.DescriptionDebat }}</td>
                <td>{{ debat.NomAnime }}</td>
                <td>{{ debat.NoteAnime }}</td>
                <td>
                    <a href="{{ path('app_debat_show', {'id': debat.id}) }}">Show</a>
                    <a href="{{ path('app_debat_edit', {'id': debat.id}) }}">Edit</a>
                    <a href="{{ path('app_commentaires', {'iddebat': debat.id}) }}">Show Comments</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_debat_new') }}">Create new</a>
{% endblock %}