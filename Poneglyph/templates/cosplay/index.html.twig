    <a href="{{ path('app_cosplay_new') }}" class="add-post-link" style="background-color: #FFD166; color: #172A3A; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
        <i class="fas fa-plus-circle fa-lg" style="margin-right: 5px;"></i> Ajouter  post
    </a>
</div>

                        &nbsp;&nbsp;
      {% for cosplay in cosplays %}
        <div class="post">
          <div class="post-media post-image">
            <td><img src="{{ asset('uploads/' ~ cosplay.imagecp) }}" alt="Image du cosplay" width="510" height="510"></td>
          </div>

          <div class="post-body">
            <div class="entry-header">
              <div class="post-meta">
                <span class="post-author">
                  <i class="far fa-user"></i><a href="#"> Admin</a>
                </span>
                <span class="post-cat">
                 <i class="fas fa-leaf"></i> Fabriqu√© avec <td>{{ cosplay.idmateriaux }}</td>
                </span>
                
               <span class="post-meta-date">
               <i class="far fa-calendar"></i> 
                {{ cosplay.datecreation ? cosplay.datecreation|date('F d, Y') : '' }}
                
               </span>
              

                <span class="post-comment" data-cosplay-id="{{ cosplay.id }}">
    <a href="#" class="comments-link" id="like-button"><i class="far fa-heart"></i>Like ({{ cosplay.likeCount }})</a>
</span>


               </div>
              <h2 class="entry-title">
                <td>{{ cosplay.nomcp }}</td>
              </h2>
            </div><!-- header end -->

            <div class="entry-content">
             <tr>
                  <td>
                     <span class="description">{{ cosplay.descriptioncp }}</span>
                       
                    </td>
                  

            </div>

            <div class="post-footer">
              <a href="{{ path('app_cosplay_show', {'id': cosplay.id}) }}" class="btn btn-primary">Continue Reading</a>
            </div>

          </div><!-- post-body end -->
        </div><!-- 1st post end -->
        
 {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
       
        {% endfor %}
