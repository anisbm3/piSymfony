</style>
<script>
 document.addEventListener("scroll", function() {
  var scrollPosition = window.scrollY;
  var serviceAreaSection = document.getElementById("ts-service-area");
  var serviceAreaSectionPosition = serviceAreaSection.getBoundingClientRect().top + window.scrollY;
  var windowHeight = window.innerHeight;

  if (scrollPosition + windowHeight > serviceAreaSectionPosition) {
    serviceAreaSection.classList.add("fade-in");
  } else {
    serviceAreaSection.classList.remove("fade-in");
  }
  });
  
/* posts----*/
const handleScroll = () => {
  const newsSection = document.getElementById('news');
  const scrollPosition = window.scrollY;
  const newsSectionPosition = newsSection.getBoundingClientRect().top + window.scrollY;
  const windowHeight = window.innerHeight;

  // Adjust this value based on how far from the top of the viewport you want the animation to trigger
  const triggerOffset = 200;

  if (scrollPosition + windowHeight > newsSectionPosition + triggerOffset) {
    newsSection.classList.add('fade-in');
    // Remove the event listener to prevent multiple animations
    window.removeEventListener('scroll', handleScroll);
  }
};

// Add scroll event listener
window.addEventListener('scroll', handleScroll);

</script>
