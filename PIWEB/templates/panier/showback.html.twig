{% extends 'Back.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ panier.id }}</td>
            </tr>
            <tr>
                <th>Prod_name</th>
                <td>{{ panier.prodName }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ panier.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ panier.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ panier.date ? panier.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Panier_id</th>
                <td>{{ panier.panierId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_panier_indexback') }}">back to list</a>

{% endblock %}
