{% extends 'Front.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
<div class="service">
    <div class="container">
        <div class="section-header text-center">
            <div id="google_translate_element"></div>
            <h4 style="margin-top:50px; margin-bottom:50px;">Liste des Produits</h4>
        </div>
        <div class="row">
            {% for produit in produits %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-item">
                    <center><h2>{{ produit.Nom }}</h2></center>
                    <p><strong style="color:#696969"> Description :</strong> {{ produit.Description }}</p>
                    <p><strong style="color:#696969"> Prix</strong> {{ produit.Prix }}</p>
                    <p><strong style="color:#696969" >Stock:</strong> {{ produit.Stock }}</p>
                    <p><strong style="color:#696969"> Category</strong> {{ produit.Category }}</p>
 
                    <center><a href="{{ path('app_panier_new', {'idproduits': produit.id, 'nomProduit': produit.Nom,'prixProduit':produit.Prix}) }}" class="btn btn-primary">Ajouter Au panier</a></center>
                    <br>
                </div>
            </div>
            {% else %}
            <div class="col">
                <p class="text-center">Aucun Produit trouv√©.</p>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<script>
    function incrementQuantity(productId) {
        var input = document.getElementById('quantity_' + productId);
        var value = parseInt(input.value) || 0;
        input.value = value + 1;
    }

    function decrementQuantity(productId) {
        var input = document.getElementById('quantity_' + productId);
        var value = parseInt(input.value) || 0;
        if (value > 1) {
            input.value = value - 1;
        }
    }
</script>
{% endblock %}